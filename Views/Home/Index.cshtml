@model SisSistemasWeb.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Cálculo de Hora Extra";
}

<div class="mb-4 text-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                Calculadora
            </div>
            <div class="card-body">
                <form asp-action="Calcular" method="post">
                    <div class="mb-3">
                        <label asp-for="ProfissionalId" class="form-label">Selecione um Funcionário</label>
                        <select asp-for="ProfissionalId" asp-items="@Model.Profissionais" class="form-select" id="profissionalSelect">
                            <option value="">-- Selecione --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Salário Base (preenchido ao selecionar)</label>
                        <input id="salarioAtual" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="HorasExtras" class="form-label"></label>
                        <input asp-for="HorasExtras" type="number" class="form-control" />
                        <span asp-validation-for="HorasExtras" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-primary">Calcular Total</button>
                        <a asp-action="Index" class="btn btn-secondary">Novo Cálculo</a>
                        <a asp-controller="Profissionais" asp-action="Index" class="btn btn-success">Cadastrar/Gerenciar</a>
                    </div>
                </form>

                @if (Model.TotalCalculado.HasValue) {
                    <hr />
                    <div class="mt-3 p-3 bg-light rounded">
                        <h4>Resultado do Cálculo</h4>
                        <div class="row">
                            <div class="col-6">
                                <label class="text-muted">Salário Base</label>
                                <h5 class="fw-bold">@Model.Salario?.ToString("C")</h5>
                            </div>
                            <div class="col-6">
                                <label class="text-success">Total Final (com Horas)</label>
                                <h5 class="fw-bold text-success fs-4">@Model.TotalCalculado?.ToString("C")</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home-index.js" asp-append-version="true"></script>
}
